<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lhmcap.AssetDetailsActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asset Details" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp" >

            <TextView
                android:id="@+id/assetMake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make:     "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/assetMakeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:layout_marginTop="46dp" >

            <TextView
                android:id="@+id/assetModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Model:    "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/assetModelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp" >

            <TextView
                android:id="@+id/assetVIN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIN#      "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/assetVINID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/linearLayout4"
        android:layout_marginTop="37dp"
        android:text="Status:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textStatus"
        android:layout_below="@+id/spinnerStatus"
        android:text="Action:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textAction"
        android:layout_below="@+id/spinnerAction"
        android:text="Everything Correct?"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/spinnerOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textAction"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="21dp"
        android:layout_toRightOf="@+id/textOK"
        android:entries="@array/ok_status" />

    <Spinner
        android:id="@+id/spinnerAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinnerOk"
        android:layout_below="@+id/textStatus"
        android:layout_marginTop="25dp"
        android:entries="@array/action_status" />

    <Spinner
        android:id="@+id/spinnerStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinnerAction"
        android:layout_alignTop="@+id/textStatus"
        android:entries="@array/vehicle_status" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textOK"
        android:layout_below="@+id/textOK"
        android:layout_marginLeft="29dp"
        android:text="Submit"
        android:onClick="sendMessage" />

</RelativeLayout>